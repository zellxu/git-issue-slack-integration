<% if current_user %>
  <div class="row">
    <h2 class="col-md-6 col-md-offset-1">Welcome <%= current_user.name %> <%= link_to "Sign Out", "sign-out", class: "btn btn-default" %> </h2>
  </div>
  <div class="row ">
    <%= form_for current_user do |f|%>
      <%= f.label "Enter your integration token here: ", class: "col-md-4 control-label" %>
      <%= f.text_field :integration_token %>
      <%= f.submit "update token" %>
    <% end %>
  </div>
  <div class="repo">
    <% @repos.each do |repo| %>
      <div class="row">
        <span class="col-md-5"> <%= "#{repo.short_name}: #{repo.owner}/#{repo.name} " %></span>
        <%= link_to "edit", edit_repo_path(repo), class: "btn-sm btn-primary" %>
        <%= link_to 'destory',  repo,  method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %>
        <%= link_to 'make default', make_default_repo_path(repo), class: "btn-sm btn-primary" unless current_user.default_repo_id == repo.id %>
      </div>
      <br/>
    <% end %>
  </div>
  <p><%= link_to "Add a new repo", new_repo_path %></p>
<% else %>
  <%= link_to "Sign in with Github", "/auth/github" %>
<% end %>